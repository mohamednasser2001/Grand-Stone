@model Domain.Entities.Product

@{
    ViewData["Title"] = Model?.Name ?? "Product Details";
}

<section class="product-details">
    <div class="container product-details-container">

        <!-- LEFT: Image -->
        <div class="product-image">
            <a asp-area="Customer" asp-controller="Home" asp-action="Index" class="back-link">
                &#8592; Back
            </a>

            <img src="@(Model?.ImageUrl ?? "/images/products/p1.jpg")"
                 alt="@(Model?.Name ?? "Product")" />
        </div>

        <!-- RIGHT: Info -->
        <div class="product-info">

            <h1 class="product-title">@Model?.Name</h1>

            <p class="product-desc">
                @Model?.Description
            </p>

            <div class="product-meta">
                <div class="meta-row">
                    <span class="meta-label">Finish</span>
                    <span class="meta-value">Polished</span>
                </div>

                <div class="meta-row">
                    <span class="meta-label">Applications</span>
                    <span class="meta-value">Kitchen countertops, Bathroom countertops, Interior pavements</span>
                </div>
            </div>

            <div class="actions">
                <a asp-area="Customer" asp-controller="Home" asp-action="Index" class="btn-back">
                    Back to Home
                </a>
            </div>

        </div>

    </div>
</section>


