<section class="gs-pageHero gs-pageHero--about">
    <!-- Slides -->
    <div class="gs-pageHero__slides" aria-hidden="true">
        <!-- Slide 1 -->
        <div class="gs-pageHero__slide is-1"></div>
        <!-- Slide 2 -->
        <div class="gs-pageHero__slide is-2"></div>
        <!-- Slide 3 -->
        <div class="gs-pageHero__slide is-3"></div>
    </div>

    <!-- Overlay content -->
    <div class="gs-pageHero__content">
        <div class="container">
            <div class="gs-pageHero__inner">
                <!-- Titles (يتغيروا مع السلايد) -->
                <h1 class="gs-pageHero__title t-1">About Us</h1>
                <h1 class="gs-pageHero__title t-2">Crafted by Nature, Perfected by Us</h1>
                <h1 class="gs-pageHero__title t-3">Building Trust in Every Stone</h1>

                <!-- Breadcrumb -->
                <div class="gs-pageHero__crumb">
                    <a asp-area="Customer" asp-controller="Home" asp-action="Index" class="gs-pageHero__crumbLink">
                        <i class="bi bi-house"></i> Home
                    </a>
                    <span class="gs-pageHero__sep">›</span>
                    <span class="gs-pageHero__crumbCurrent">About</span>
                </div>
            </div>
        </div>
    </div>
</section>

<partial name="_ChairmanSection" />

<section class="gs-aboutSplit">
    <div class="container">
        <div class="gs-aboutSplit__grid">

            <!-- LEFT: Text -->
            <div class="gs-aboutSplit__left">

                <div class="gs-aboutSplit__kicker">
                    <span class="gs-aboutSplit__line"></span>
                    <span class="gs-aboutSplit__label">ABOUT US</span>
                </div>

                <h2 class="gs-aboutSplit__title">
                    It is not a trade mark it’s a <br />
                    sign of success
                </h2>

                <p class="gs-aboutSplit__desc">
                    Grand Stone has been operating in the marble and granite industry for years, delivering premium
                    natural stone products with a focus on quality, consistency, and modern production standards.
                    Our experience across projects and markets enables us to provide reliable service and top-tier finishes.
                </p>

                <p class="gs-aboutSplit__desc">
                    With advanced facilities and skilled teams, we continue improving our operations to serve clients
                    locally and internationally—combining craftsmanship with the latest technology.
                </p>

                <!-- Features row -->
                <div class="gs-aboutSplit__features">

                    <div class="gs-aboutSplit__feature">
                        <div class="gs-aboutSplit__icon">
                            <i class="bi bi-gear"></i>
                        </div>
                        <div class="gs-aboutSplit__featureText">
                            <h4>Modern Machines<br />With Advanced Lines</h4>
                        </div>
                    </div>

                    <div class="gs-aboutSplit__feature">
                        <div class="gs-aboutSplit__icon">
                            <i class="bi bi-award"></i>
                        </div>
                        <div class="gs-aboutSplit__featureText">
                            <h4>Guaranteed Quality<br />Through Latest Technology</h4>
                        </div>
                    </div>

                </div>

                <!-- bullets -->
                <div class="gs-aboutSplit__bullets">
                    <p><span class="gs-aboutSplit__arrow">→</span> Advanced machines powering modern production lines</p>
                    <p><span class="gs-aboutSplit__arrow">→</span> State-of-the-art equipment enhances efficiency</p>
                </div>

            </div>

            <!-- RIGHT: Image -->
            <div class="gs-aboutSplit__right">
                <div class="gs-aboutSplit__photoWrap">
                    <img src="~/Images/about/about-factory.jpg" class="gs-aboutSplit__photo" alt="Factory">

                    <!-- Badge -->
                    <div class="gs-aboutSplit__badge">
                        <div class="gs-aboutSplit__badgeText">
                            Over 25 Years’<br />
                            Expertise, Producing<br />
                            2,500+ Meters Daily
                        </div>
                    </div>

                </div>
            </div>

        </div>
    </div>
</section>


<section class="gs-vision">
    <div class="container">
        <div class="gs-vision__grid">

            <!-- LEFT: Image + Overlay Card -->
            <div class="gs-vision__left">
                <div class="gs-vision__imgWrap">
                    <img src="~/Images/about/vision-team.jpg" alt="Grand Stone Team" class="gs-vision__img" />

                    <div class="gs-vision__overlay">
                        <p>
                            Grand Stone Group aims to lead the natural stone industry with
                            unmatched credibility and consistent quality. We envision Egyptian marble,
                            granite, and limestone as global benchmarks — trusted by architects and designers worldwide.
                        </p>
                    </div>
                </div>

                <!-- خلفية رمادي زي اللي في الصورة -->
                <div class="gs-vision__shadowBox"></div>
            </div>

            <!-- RIGHT: Text -->
            <div class="gs-vision__right">
                <div class="gs-vision__kicker">GLOBAL PURPOSE, COMMITMENT, AND GROWTH VISION</div>

                <h2 class="gs-vision__title">
                    Powerful Manufacturing… Quality <br />
                    Without Limits
                </h2>

                <p class="gs-vision__desc">
                    At Grand Stone Group, our vision is to be a globally trusted name in the natural stone industry,
                    known for credibility, consistency, and excellence. We are committed to delivering premium-quality
                    marble, granite, and limestone using advanced technologies, precision machinery, and a skilled team.
                </p>

                <div class="gs-vision__list">
                    <div class="gs-vision__item">
                        <span class="gs-vision__num">01</span>
                        <span class="gs-vision__text">Our Vision For Global Leadership</span>
                    </div>

                    <div class="gs-vision__item">
                        <span class="gs-vision__num">02</span>
                        <span class="gs-vision__text">Our Mission For Quality Excellence</span>
                    </div>

                    <div class="gs-vision__item">
                        <span class="gs-vision__num">03</span>
                        <span class="gs-vision__text">Our Strategy For Global Growth</span>
                    </div>
                </div>
            </div>

        </div>
    </div>
</section>


