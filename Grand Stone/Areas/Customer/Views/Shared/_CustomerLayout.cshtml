@inject IConfiguration Configuration

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Grand Stone</title>

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet">
</head>
<body>

    <header id="siteHeader" class="site-header">

        <div id="topbar" class="topbar">
            <div class="container d-flex justify-content-between align-items-center flex-wrap gap-2">
                <div class="topbar-left d-flex align-items-center gap-3">
                    <span><i class="bi bi-clock me-2"></i>Sat - Thu: 9am - 5pm</span>
                    <span class="opacity-75">|</span>
                    <span>Fri: Closed</span>
                </div>

                <div class="topbar-right d-flex align-items-center gap-4">
                    <span><i class="bi bi-telephone me-2"></i>(+202) 2700 1975</span>
                    <span><i class="bi bi-envelope me-2"></i>info@grandstone.com</span>
                </div>
            </div>
        </div>

        <nav id="mainNavbar" class="navbar navbar-expand-lg navbar-dark">
            <div class="container">
                <a class="navbar-brand d-flex align-items-center gap-3"
                   asp-area="Customer" asp-controller="Home" asp-action="Index">
                    <img class="brand-logo" src="~/Images/Logo/logo.png" alt="Grand Stone Logo" />
                    <span class="brand-text">GRAND STONE</span>
                </a>

                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#gsNav"
                        aria-controls="gsNav" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse" id="gsNav">
                    <ul class="navbar-nav ms-auto align-items-lg-center gap-lg-3">
                        <li class="nav-item">
                            <a class="nav-link" asp-area="Customer" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link"
                               asp-area="Customer"
                               asp-controller="About"
                               asp-action="Index">AboutUs</a>
                        </li>

                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle"
                               href="#"
                               id="materialsDropdown"
                               role="button"
                               data-bs-toggle="dropdown"
                               aria-expanded="false">
                                Materials
                            </a>

                            <ul class="dropdown-menu" aria-labelledby="materialsDropdown">
                                <li>
                                    <a class="dropdown-item"
                                       href="@Url.Action("Index","Granite")">
                                        Granite
                                    </a>
                                </li>
                                <li>
                                    <a class="dropdown-item"
                                       href="@Url.Action("Index","Marble")">
                                        Marble
                                    </a>
                                </li>
                            </ul>
                        </li>

                        <li class="nav-item"><a class="nav-link" href="#projects">Projects</a></li>

                        <li class="nav-item ms-lg-3">
                            <a class="btn btn-warning gs-btn-contact px-4" href="#contact">Contact Us →</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <main id="mainContent">
        @RenderBody()
    </main>

    <!-- =========================
         SHOWROOM / FOOTER SECTION
    ========================== -->
    <section class="gs-footerShowroom">
        <div class="container">


            <!-- 3 Columns: Left (Factories) | Middle (Map) | Right (Showroom) -->
            <div class="gs-footerShowroom__grid">

                <!-- LEFT: Factories -->
                <div class="gs-footerShowroom__col gs-footerShowroom__left">
                    <h3 class="gs-footerShowroom__title gs-footerShowroom__title--left">Factories</h3>

                    <div class="gs-footerShowroom__factories">
                        <p><b>Factory 1:</b> 45C/269D Shak Elsobaan Road, Torah, Cairo, Egypt.</p>
                        <p><b>Factory 2:</b> 166D Shak Elsobaan Road, Torah, Cairo, Egypt.</p>
                        <p><b>Factory 3:</b> 38/D Shak Elsobaan Road, Torah, Cairo, Egypt.</p>
                    </div>
                </div>

                <!-- MIDDLE: Map -->
                <div class="gs-footerShowroom__col gs-footerShowroom__map">
                    <div class="gs-footerShowroom__mapFrame">
                        <iframe src="@Configuration["Contact:GoogleMapEmbed"]"
                                width="100%"
                                height="100%"
                                style="border:0;"
                                allowfullscreen
                                loading="lazy"
                                referrerpolicy="no-referrer-when-downgrade">
                        </iframe>
                    </div>
                </div>

                <!-- RIGHT: Showroom info -->
                <div class="gs-footerShowroom__col gs-footerShowroom__right">
                    <h3 class="gs-footerShowroom__title">Our Showroom</h3>

                    <div class="gs-footerShowroom__info">
                        <p>99 Imtedad el Amal Towers, Autostrad st, Cairo, Egypt.</p>
                        <p>(+202) 2700 1975</p>
                        <p>info@grandstone.com</p>
                        <p>Saturday – Thursday : 9am to 5pm / Friday : Closed</p>
                    </div>
                </div>

            </div>

            <div class="gs-footerShowroom__bottom">
                <div class="gs-footerShowroom__divider"></div>
                <div class="gs-footerShowroom__copy">
                    © @DateTime.Now.Year - Grand Stone. All rights reserved.
                </div>
            </div>

        </div>
    </section>


    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>

    <script>
        (function () {
            const header = document.getElementById('siteHeader');

            function handleScroll() {
                if (window.scrollY > 50) {
                    header.classList.add('scrolled');
                } else {
                    header.classList.remove('scrolled');
                }
            }

            window.addEventListener('scroll', handleScroll, { passive: true });
            handleScroll();
        })();
    </script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
