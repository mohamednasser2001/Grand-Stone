@model IEnumerable<Domain.Entities.Category>

<h2>Categories</h2>

@if (!Model.Any())
{
    <p>No categories found.</p>
}
else
{
    <table class="table table-bordered">
        <thead>
            <tr>
                <th>Name</th>
                <th>Description</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var category in Model)
            {
                <tr>
                    <td>@category.Name</td>
                    <td>@category.Description</td>
                </tr>
            }
        </tbody>
    </table>
}

